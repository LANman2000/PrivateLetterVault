---
// src/pages/index.astro
import MainLayout from '../layouts/Layout.astro';
import '@fontsource/cedarville-cursive';
const title = "Welcome, Love";
---

<MainLayout>
  <main class="hero">
    <h1 class="headline">
      <span class="welcome times">Welcome,</span>
      <span class="love times">Love</span>
    </h1>

    <p class="subtitle times">This  space  exists  just  for you</p>

    <a href="/page2" class="cta">Begin your moment</a>
    <div class="dots">
      <span class="dot active"></span>
      <span class="dot"></span>
      <span class="dot accent"></span>
    </div>
  </main>
</MainLayout>

<style is:global>

.hero {
  min-height: 100vh;
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  background: radial-gradient(circle at top right, var(--bg-mid), var(--bg-start), var(--bg-end));
}

.subtitle {
  margin-top: 1rem;
  color: rgba(255, 255, 255, 0.7);
  font-size: 1rem;
}

.cta:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 25px rgba(0,0,0,0.25);
}

.dots {
  display: flex;
  gap: 0.5rem;
  margin-top: 2.5rem;
}
.dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: #ff7aa8;
  opacity: 0.5;
}
.dot.active { opacity: 1; }
.dot.accent { background: #ffcc66; }
</style>
