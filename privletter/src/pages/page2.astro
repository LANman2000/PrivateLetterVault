<!-- src/pages/page2.astro -->
---
import MainLayout from '../layouts/Layout.astro';
import '../styles/global.css';
---

<MainLayout pageClass="journey">
  
    <div class="text-center space-y-8 max-w-2xl mx-auto animate-fade-in">
      <div class="space-y-6">
        <h1 class="text-5xl md:text-7xl font-heading font-bold text-foreground">
          Page2
        </h1>
        <p class="headline:cursive">
          Birthday Letter
        </p>
      </div>

      <div class="flex justify-center pt-8">
        <div class="p-6 bg-card/50 backdrop-blur-sm rounded-2xl border border-border hover:scale-105 transition-transform duration-300">
          <div class="text-4xl mb-4">üíå</div>
          <h3 class="text-xl font-heading font-semibold mb-2">Love Letter</h3>
          <span class="cursive text-3xl text-white">Dear__,<br> This is a test to see if the cursive font works well in cursive <br></span>
          <span class="times text-3xl text-white">Dear__,<br> This is a test to see if the cursive font works well in times new</span>
        </div>
      </div>

      <div class="pt-4">
        <a href="/" class="cta">
        ‚Üê Back to welcome
        </a>
        <a href="/page3" class="cta">Continue</a>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 1s ease-out;
  }

 
</style>
