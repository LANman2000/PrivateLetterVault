<!-- src/pages/page2.astro -->
---
import MainLayout from '../layouts/Layout.astro';
import '../styles/global.css';
---

<MainLayout pageClass="journey">
    <div class="text-center space-y-8 max-w-2xl mx-auto animate-fade-in">
      <div class="space-y-6">
        <h1 class="headline">  
        <span class="welcome">Things I Don't Say</span>
        <span class="love">Enough,</span>
        </h1>
        <p class="text-lg md:text-xl text-muted-foreground font-body leading-relaxed">
          Every great love story has a beginning. This is ours. A space created with love, 
          filled with memories, and blessed with moments that make our hearts full.
        </p>
      </div>

      <div class="pt-8">
        <a 
          href="/"
          class="cta"
        >
          ‚Üê Back to welcome
          </a>
          <a href="/page4content" class="cta">Continue</a>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 1s ease-out;
  }
</style>
