<!-- src/pages/page2.astro -->
---
import MainLayout from '../layouts/Layout.astro';
import '../styles/global.css';
---

<MainLayout pageClass="journey">
    <div class="text-center space-y-8 max-w-4xl mx-auto animate-fade-in">
      <div class="space-y-6">
        <h1 class="headline">
        <span class="welcome">What I love About</span>
        <span class="love">You</span>
        </h1>
      </div>

      <div class="pt-8">
        <a 
          href="/"
          class="cta"
        >
          ‚Üê Back to welcome
          </a>
          <a href="/page3content" class="cta">Continue</a>
        
      </div>
    </div>
  </div>
</MainLayout>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 1s ease-out;
  }
</style>
